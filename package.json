{
  "name": "autolink",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:server": "turbo run dev --filter=@autolink/server",
    "dev:web": "turbo run dev --filter=@autolink/web",
    "dev:app": "turbo run dev --filter=@autolink/app",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @autolink/server exec prisma generate",
    "db:migrate": "pnpm --filter @autolink/server exec prisma migrate dev && pnpm run db:generate",
    "db:push": "pnpm --filter @autolink/server exec prisma db push && pnpm run db:generate",
    "db:studio": "pnpm --filter @autolink/server exec prisma studio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "turbo": "^2.4.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "prisma",
      "esbuild",
      "@nestjs/core",
      "sharp",
      "unrs-resolver",
      "msgpackr-extract"
    ]
  }
}
